package Projects;

import java.util.Random;
import java.util.Scanner;

public class Slot {
    public static void main(String[] args) {
        Scanner input = new Scanner(System.in);
        int balance = 100;
        int bet;
        int payout;
        String[] row;

        System.out.println("***************************");
        System.out.println("    Welcome to java slot    ");
        System.out.println("Symbols: ğŸ’ ğŸ‰ ğŸ‹ ğŸ”” â­ ");
        System.out.println("***************************");

        while (balance > 0) {
            System.out.println("Current balance: $" + balance);
            System.out.print("Place your bet amount: ");
            bet = input.nextInt();

            if (bet > balance) {
                System.out.println("Daxil etdiyiniz medaxil balansdan coxdur!!");
                continue;
            } else if (bet <= 0) {
                System.out.println("Daxil etdiyiniz medaxil 0 dan boyuk olmalidir!");
                continue;
            } else {
                balance = balance - bet;
            }
            System.out.println("Spinnig...");
            row = spinRow();
            PrintRow(row);
            payout = GetPayout(row, bet);

            if (payout > 0) {
                System.out.println("You won $" + payout);
                balance = balance + payout;
            } else {
                System.out.println("Sorry you lost this round");
            }

        }

    }

    static String[] spinRow() {
        String[] symbols = {"ğŸ’", "ğŸ‰", "ğŸ‹", "ğŸ””", "â­"};
        String[] row = new String[3];
        Random random = new Random();

        for (int i = 0; i < 3; i++) {
            row[i] = symbols[random.nextInt(symbols.length)];
        }
        return row;
    }

    static void PrintRow(String[] row) {
        System.out.println("*************************");
        System.out.println(" " + String.join(" | ", row));
        System.out.println("*************************");
    }

    static int GetPayout(String[] row, int bet) {
        if (row[0].equals(row[1]) && row[1].equals(row[2]))
            return switch (row[0]) {
                case "ğŸ’" -> bet * 2;
                case "ğŸ‰" -> bet * 3;
                case "ğŸ‹" -> bet * 4;
                case "ğŸ””" -> bet * 5;
                case "â­" -> bet * 6;
                default -> 0;
            };
        if (row[0].equals(row[1]))
            return switch(row[0]) {
                case "ğŸ’" -> bet * 2;
                case "ğŸ‰" -> bet * 3;
                case "ğŸ‹" -> bet * 4;
                case "ğŸ””" -> bet * 5;
                case "â­" -> bet * 10;
                default -> 0;
            };
        if (row[1].equals(row[2]))
            return switch(row[1]) {
                case "ğŸ’" -> bet * 2;
                case "ğŸ‰" -> bet * 3;
                case "ğŸ‹" -> bet * 4;
                case "ğŸ””" -> bet * 5;
                case "â­" -> bet * 10;
                default -> 0;
            };
        return 0;
    }
}

